{
  "manifest_version": 3,
  "name": "Custom Cursor Changer",
  "version": "1.0",
  "description": "Change your cursor with custom designs",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["cursors/*.png", "cursors/*.gif", "cursors/*.apng"],
      "matches": ["<all_urls>"]
    }
  ]
}
